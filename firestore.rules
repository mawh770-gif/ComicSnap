rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- ARTIFACTS ROOT ---
    match /artifacts/{appId} {

      // --- PUBLIC DATA (Shared/Global) ---
      // This includes the new 'series_mappings' collection
      match /public/data/{collection}/{document} {
        // Allow authenticated users to read globally shared data (like the comic cache)
        allow read: if request.auth != null;
        
        // CRITICAL: Deny direct user write access. 
        // Writes will ONLY happen via the Cloud Function (Admin SDK), which bypasses this rule.
        allow write: if false; 
      }
      
      // --- PRIVATE USER DATA (If you add personal collections later) ---
      match /users/{userId}/{documents=**} {
        // Only the owner can read/write their own private data
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}